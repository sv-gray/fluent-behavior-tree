{
    "compilerOptions": {
        "moduleResolution":       "Node",
        "module":                 "ESNext",
        "target":                 "ES2020",
        "sourceMap":              true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata":  true,
        "noImplicitAny":          false,
        "noImplicitThis":         true,
        "declaration":            true,
        "outDir":                 "./dist",
        "lib":                    [
            "ES2020",
            "esnext"
        ],
        "pretty":                 true,
        "skipLibCheck":           true
    },
    "include":         [
        "./src/**/*.ts"
    ]
}
